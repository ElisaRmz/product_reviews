<h1>PRODUCTS</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>url</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products&.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= link_to product.url, product.url, target: '_blank' %></td>
        <td><%= product.description %></td>
        <td>
          <%= link_to 'Show', product_path(product), method: :get, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_product_path(product), method: :get, class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', product_path(product), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'  }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
